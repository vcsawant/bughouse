<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Bughouse" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <!-- Chess font for consistent Unicode piece rendering -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+Symbols+2&display=swap"
      rel="stylesheet"
    />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        // App theme (light/dark mode)
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));

        // Chess board theme (board colors - independent from app theme)
        // Set on <html> element (like app theme) so LiveView DOM patching can't overwrite it
        const setChessTheme = (theme) => {
          localStorage.setItem("phx:chess-theme", theme);
          if (theme === "classic") {
            document.documentElement.removeAttribute("data-chess-theme");
          } else {
            document.documentElement.setAttribute("data-chess-theme", theme);
          }
        };

        // Restore saved chess theme on page load
        const savedChessTheme = localStorage.getItem("phx:chess-theme") || "classic";
        if (savedChessTheme !== "classic") {
          setChessTheme(savedChessTheme);
        }

        // Listen for chess theme changes
        window.addEventListener("phx:set-chess-theme", (e) => {
          setChessTheme(e.target.dataset.phxChessTheme);
        });

        // Sync chess theme across browser tabs
        window.addEventListener("storage", (e) => {
          if (e.key === "phx:chess-theme") {
            setChessTheme(e.newValue || "classic");
          }
        });

        // Clock style (clock colors - independent from board and app theme)
        const setClockStyle = (style) => {
          localStorage.setItem("phx:clock-style", style);
          if (style === "default") {
            document.documentElement.removeAttribute("data-clock-style");
          } else {
            document.documentElement.setAttribute("data-clock-style", style);
          }
        };

        const savedClockStyle = localStorage.getItem("phx:clock-style") || "default";
        if (savedClockStyle !== "default") {
          setClockStyle(savedClockStyle);
        }

        window.addEventListener("phx:set-clock-style", (e) => {
          setClockStyle(e.target.dataset.phxClockStyle);
        });

        window.addEventListener("storage", (e) => {
          if (e.key === "phx:clock-style") {
            setClockStyle(e.newValue || "default");
          }
        });
      })();
    </script>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
